<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    ログイン
  </div>

  <%= flash[:notice] %>
  <%= flash[:alert] %>  
  <div class="form-group-wrap">
    <div class= "form-group">
      <label class="form-text" for="email">メールアドレス</label>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
    </div>

    <div class= "form-group">
      <label class="form-text" for="password">パスワード</label>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-blue-btn" %>
    </div>
  </div>
</div>
<% end%>