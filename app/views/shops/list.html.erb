<%= render "shared/header" %>
<div class="main">
  <div class="shop-list-contents-wrap">
    <% @shops.each do |shop| %>
      <div class='shop-list-content-wrap'>
        <%= link_to shop_path(shop.id), class: "shop-list-link-wrap" do %>
          <div class='shop-img-content'>
            <%= image_tag shop.image, class: "shop-img" %>
          </div>
          <div class="shop-list-content">店名：<%= shop.name %></div>
          <div class="shop-list-content">最寄駅：<%= shop.nearest_station %></div>
          <div class="shop-list-content">営業時間：<%= shop.opening_hours %></div>
        <% end %>
        <div class="shop-list-check_box">
          <%= form_with model: shop, url: shop_path(shop), local: true, method: :patch do |f| %>
            訪問済み
            <%= f.check_box :visited, include_hidden: false %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render "shared/footer" %>
</div>